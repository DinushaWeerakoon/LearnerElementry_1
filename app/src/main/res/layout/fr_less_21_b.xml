<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Match the following e-cards with the suitable situation. Drag and Drop the wish to the correct e-card."
    android:textStyle="bold"
    android:textSize="@dimen/text_size"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/less_21_g"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="................................"
        android:layout_below="@+id/image_1"
        android:layout_marginLeft="10dp"
        android:id="@+id/ans_1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_2"
        android:layout_alignTop="@+id/image_1"
        android:layout_toRightOf="@+id/image_1"
        android:layout_toEndOf="@+id/image_1"
        android:src="@drawable/less_21_b"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=".................................."
        android:layout_below="@+id/image_2"
        android:layout_alignLeft="@+id/image_2"
        android:id="@+id/ans_2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_3"
        android:layout_alignTop="@+id/image_1"
        android:layout_toRightOf="@+id/image_2"
        android:layout_toEndOf="@+id/image_2"
        android:src="@drawable/less_21_c"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=".................................."
        android:layout_below="@+id/image_3"
        android:layout_alignLeft="@+id/image_3"
        android:id="@+id/ans_3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Happy Married life!"
        android:layout_below="@+id/image_1"
        android:id="@+id/txt_1"
        android:textSize="@dimen/text_size"
        android:textColor="@color/LightBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy New Year!"
        android:id="@+id/txt_2"
        android:layout_alignTop="@+id/txt_1"
        android:layout_alignRight="@+id/ans_3"
        android:textSize="@dimen/text_size"
        android:textColor="@color/LightBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Happy Birth Day!"
        android:layout_below="@+id/txt_1"
        android:id="@+id/txt_3"
        android:textSize="@dimen/text_size"
        android:textColor="@color/LightBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm Sorry!"
        android:id="@+id/txt_4"
        android:layout_alignTop="@+id/txt_3"
        android:layout_alignLeft="@+id/txt_2"
        android:textSize="@dimen/text_size"
        android:textColor="@color/LightBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Congratulations"
        android:layout_below="@+id/txt_3"
        android:id="@+id/txt_5"
        android:textSize="@dimen/text_size"
        android:textColor="@color/LightBlue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy New Year!"
        android:id="@+id/txt_6"
        android:layout_alignTop="@+id/txt_1"
        android:layout_alignRight="@+id/txt_2"
        android:layout_alignEnd="@+id/ans_3"
        android:textSize="@dimen/text_size"
        android:textColor="@color/LightBlue"/>
</RelativeLayout>