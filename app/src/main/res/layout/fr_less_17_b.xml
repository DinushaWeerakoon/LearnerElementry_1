<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lessn_topic"
            android:text="Select the best option with regard to a telephone conversation."
            android:textSize="@dimen/text_size_heading"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/less_17_b"
            android:layout_marginBottom="10dp"
            android:src="@drawable/less_17_b"
            />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qst_1"
                android:text="1. You'd better ask the other person whether they are free to speak now, if you ...................."
                android:textSize="@dimen/text_size"
                android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grp_1"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="receive the call"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/ans_1_1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="initiate the call"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/ans_1_2"/>
            </RadioGroup>


        </LinearLayout>



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="2. You ask the other person whether they are free to speak now, at the ......................"
                android:id="@+id/qst_2"
                android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grp_2"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="end of the call"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/ans_2_1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="beginning of the call"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/ans_2_2"/>
            </RadioGroup>



        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="3. You better thank the other person for her/his time if you ...................."
            android:id="@+id/qst_3"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grp_3"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="initiate the call"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/ans_3_1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="receive the call"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/ans_3_2"/>
            </RadioGroup>



        </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textSize="@dimen/button_size_large"
                android:layout_marginLeft="20dp"
                android:id="@+id/reset_btn"
                android:layout_gravity="center_horizontal" />



    </LinearLayout>
</ScrollView>
